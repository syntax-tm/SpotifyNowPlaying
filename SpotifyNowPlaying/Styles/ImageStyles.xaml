<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="ImageBaseStyle" TargetType="{x:Type Image}">
        <Setter Property="MaxHeight" Value="320" />
        <Setter Property="MaxWidth" Value="320" />
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="StretchDirection" Value="Both" />
    </Style>

    <Style x:Key="AlbumArtImageStyle" TargetType="{x:Type Image}" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="MaxHeight" Value="640" />
        <Setter Property="MaxWidth" Value="640" />
    </Style>

    <Style x:Key="PlaylistImageStyle" TargetType="{x:Type Image}" BasedOn="{StaticResource {x:Type Image}}">
        <Setter Property="MaxHeight" Value="640" />
        <Setter Property="MaxWidth" Value="640" />
    </Style>

</ResourceDictionary>
    