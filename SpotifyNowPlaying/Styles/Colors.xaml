<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    

    <SolidColorBrush x:Key="ForegroundBrush" Color="White" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1a1a1a" />

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1f1f1f" />

    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#fefefe" />

    <SolidColorBrush x:Key="ControlBorderBrush" Color="#333333" />
    <SolidColorBrush x:Key="BorderBrush" Color="#0a0a0a" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#0a0a0a" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0a0a0a" />

</ResourceDictionary>